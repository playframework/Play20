#! /bin/bash +x

# Copyright (C) 2009-2017 Lightbend Inc. <https://www.lightbend.com>

. "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/build"

CROSSBUILD=""
# If first argument starts with +, it's a crossbuild argument, eg "+" or "+++2.11.8"
# It needs to be part of the same argument as the SBT task that we run, so gets handled
# specially
if echo $1 | grep -q '^+'
then
    CROSSBUILD=$1
    shift
fi

cd $FRAMEWORK

echo "[info]"
echo "[info] ---- BUILDING PLAY $CROSSBUILD"
echo "[info]"
build "$@" quickPublish "${CROSSBUILD} publishLocal"

echo "[info]"
echo "[info] ---- RUNNING TESTS $CROSSBUILD"
echo "[info]"

build "$@" "${CROSSBUILD} test"

echo "[info]"
echo "[info] ALL TESTS PASSED"
echo "[info]"
